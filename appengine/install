post_install() {
    echo "==================================================================="
    echo "Google App Engine SDK for Python installed in /opt/google_appengine"
    echo "These commands are now available:"
    find /opt/google_appengine -maxdepth 1 -type f -executable -printf "/usr/bin/%f -> /opt/google_appengine/%f\n"
    echo "==================================================================="
}

