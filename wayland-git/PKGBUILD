pkgname=wayland-git
pkgver=20120731
pkgrel=1
pkgdesc="A modern display server."
arch=(i686 x86_64)
url="http://wayland.freedesktop.org"
provides=("libwayland-git=${pkgver}" "wayland=0.86")
conflicts=('libwayland-git' 'wayland')
replaces=('libwayland-git')
license=('MIT')
depends=('expat' 'libffi')
makedepends=('pkgconfig')
options=(!makeflags !libtool)

_gitroot="git://anongit.freedesktop.org/wayland/wayland"
_gitname="wayland"

build() {
	msg "Connecting to git.freedesktop.org GIT server...."

	if [ -d $srcdir/$_gitname ] ; then
		cd $_gitname && git pull origin master
		msg "The local files are updated."
	else
		git clone $_gitroot --depth 1
	fi

	msg "GIT checkout done or server timeout"
	msg "Starting make..."

	rm -rf ${srcdir}/$_gitname-build
	cp -r ${srcdir}/$_gitname ${srcdir}/$_gitname-build
	cd ${srcdir}/$_gitname-build
	./autogen.sh --prefix=/usr
	make
}

package() {
     cd ${srcdir}/$_gitname-build
     make DESTDIR="${pkgdir}" install
}
